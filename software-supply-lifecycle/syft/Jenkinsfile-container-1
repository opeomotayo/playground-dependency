pipeline {
  agent {
    kubernetes {
      label 'default maven build-pod'
      defaultContainer 'docker'
      yamlFile 'build-pod.yaml'
    }
  }

  environment {
    DOCKER_HUB=credentials('dockerhub')
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }

  stages {
    stage('Delete image if exists') {
      steps {
        dir('software-supply-lifecycle/syft'){
          sh 'docker rmi java-docker:latest || (echo "Image java-docker:latest didnt exist so not removed."; exit 0)'
        }
      }
    }
    stage('Create container image') {
      steps {
        dir('software-supply-lifecycle/syft'){
          sh 'docker build --tag opeomotayo/java-docker:latest .'
          sh 'docker image ls'
        }
      }
    }
    stage('push image') {
      steps {
        sh 'echo "$DOCKER_HUB_PSW" | docker login ghcr.io -u $DOCKER_HUB_USR --password-stdin'
        sh 'docker push opeomotayo/java-docker:latest'
      }
    }
    stage('Generate SBOM') {
      steps {
        dir('software-supply-lifecycle/syft'){
          container('cosign-syft'){
            sh 'echo "$DOCKER_HUB_PSW" | docker login ghcr.io -u $DOCKER_HUB_USR --password-stdin'
            sh 'syft packages opeomotayo/java-docker:latest --scope AllLayers'
            sh 'ls -last'
          }
        }
      }
    }
  }
}