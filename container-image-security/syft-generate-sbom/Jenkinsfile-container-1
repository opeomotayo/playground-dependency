pipeline {
  agent {
    kubernetes {
      label 'default maven build-pod'
      defaultContainer 'docker'
      yamlFile 'build-pod.yaml'
    }
  }

  environment {
    DOCKER_HUB=credentials('dockerhub-cred')
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }

  stages {
    stage('Delete image if exists') {
      steps {
        dir('container-image-security/syft-generate-sbom'){
          sh 'docker rmi opeomotayo/java-docker:latest || (echo "Image opeomotayo/java-docker:latest does not exist so not removed."; exit 0)'
        }
      }
    }
    stage('Create container image') {
      steps {
        dir('container-image-security/syft-generate-sbom'){
          sh 'docker build --tag opeomotayo/java-docker:latest .'
          sh 'docker image ls'
        }
      }
    }
    stage('push image') {
      steps {
        sh 'echo "$DOCKER_HUB_PSW" | docker login -u $DOCKER_HUB_USR --password-stdin'
        sh 'docker push opeomotayo/java-docker:latest'
      }
    }
    stage('Generate SBOM') {
      steps {
        dir('container-image-security/syft-generate-sbom'){
          container('security-tools'){
            sh 'echo "$DOCKER_HUB_PSW" | docker login -u $DOCKER_HUB_USR --password-stdin'
            sh 'syft packages opeomotayo/java-docker:latest --scope AllLayers'
          }
        }
      }
    }
  }
}